    "@vitejs/plugin-react": "^4.2.1",
    "jsdom": "^26.1.0",
    "rollup-plugin-visualizer": "^6.0.3",
    "terser": "^5.43.1",
    "typescript": "^5.2.2",
    "vite": "^5.0.8",
    "vite-bundle-analyzer": "^1.2.3",
    "vitest": "^1.0.4"
  }
