{
  "name": "zip-file-editor",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:analyze": "npm run build && node scripts/bundle-analyzer.js",
    "preview": "vite preview",
    "preview:stats": "npm run build && start dist/stats.html",
    "test": "vitest",
